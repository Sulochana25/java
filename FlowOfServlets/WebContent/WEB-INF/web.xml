    <filter-name>Filter3ofServlet1</filter-name>
    <url-pattern>/Servlet1</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Servlet1</servlet-name>
    <servlet-class>com.servlets.flow.Servlet1</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet1</servlet-name>
    <url-pattern>/Servlet1</url-pattern>
  </servlet-mapping>
