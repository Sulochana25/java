<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>ServletListeners</display-name>
  <listener>
    <listener-class>com.servlets.listeners.LoginListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.servlets.listeners.SessionListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.servlets.listeners.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.servlets.listeners.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DisplayProducts</servlet-name>
    <servlet-class>com.servlets.listeners.DisplayProducts</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayProducts</servlet-name>
    <url-pattern>/DisplayProducts</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>Login.html</welcome-file>
  </welcome-file-list>
</web-app>