<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Instagram</display-name>
  <listener>
    <listener-class>com.social.instagram.listeners.InstagramServletContextListener</listener-class>
  </listener>
  <filter>
  	<filter-name>CheckSession</filter-name>
  	<filter-class>com.social.instagram.logic.CheckSession</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CheckSession</filter-name>
  	<url-pattern>/UserProfile.jsp</url-pattern>
  	<url-pattern>/userEditDetails.jsp</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>SignUp</servlet-name>
    <servlet-class>com.social.instagram.logic.SignUp</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignUp</servlet-name>
    <url-pattern>/SignUp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogIn</servlet-name>
    <servlet-class>com.social.instagram.logic.LogIn</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogIn</servlet-name>
    <url-pattern>/LogIn</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UploadPost</servlet-name>
    <servlet-class>com.social.instagram.logic.UploadPost</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadPost</servlet-name>
    <url-pattern>/UploadPost</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateDetails</servlet-name>
    <servlet-class>com.social.instagram.logic.UpdateDetails</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateDetails</servlet-name>
    <url-pattern>/UpdateDetails</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.social.instagram.logic.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>